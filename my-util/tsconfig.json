{
    "compilerOptions": {
      "baseUrl": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitOnError": true,
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "allowJs": true, //允许输入Js文件
      "noEmit": false,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*", "types"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }